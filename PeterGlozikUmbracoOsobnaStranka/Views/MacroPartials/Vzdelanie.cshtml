@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using PeterGlozikUmbracoOsobnaStranka.lib.Models
@using PeterGlozikUmbracoOsobnaStranka.lib.Controllers
@using PeterGlozikUmbracoOsobnaStranka.lib.Util

@{
    VzdelanieModel vzdelanieModel = new VzdelanieModel();
    vzdelanieModel.ZakladnaSkola = "Hriňová";
    vzdelanieModel.StrednaSkola = "Detva";
    vzdelanieModel.VysokaSkola = "-";
}

<video class="education-personaly" autoplay muted loop playsinline>
    <source src="~/Styles/video/Eduction.mp4" type="video/mp4">
</video>

<div class="education">
    <h1>@CurrentLang.GetText("Views/Education", "VZDELANIE")</h1>
    <div class="row">
        <div class="col-md-4">
            <h2>@CurrentLang.GetText("Views/Education", "Základná škola")</h2>
            <p>@vzdelanieModel.ZakladnaSkola</p>
        </div>
        <div class="col-md-4">
            <h2>@CurrentLang.GetText("Views/Education", "Stredná škola")</h2>
            <p>@vzdelanieModel.StrednaSkola</p>
        </div>
        <div class="col-md-4">
            <h2>@CurrentLang.GetText("Views/Education", "Vysoká škola")</h2>
            <p>@vzdelanieModel.VysokaSkola</p>
        </div>
    </div>
    <h2>@CurrentLang.GetText("Views/Education", "Kurzy a certifikáty")</h2>
    <div class="row">
        @foreach (string nazovKurzu in vzdelanieModel.ZoznamKurzov.zoznamKurzov)
        {
            <div class="col-md-3">
                <strong>@nazovKurzu</strong>
            </div>
        }
    </div>
</div>